@model ProductListViewModel

<a class="btn btn-primary" asp-controller="Product" asp-action="Create">
    Создать новый продукт
</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Цена</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-productId="@product.ProductId">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
